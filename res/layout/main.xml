<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/layout1" android:weightSum="1">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView2" android:layout_gravity="center" android:layout_margin="12dp"
            android:gravity="center_vertical|center_horizontal" android:textSize="30sp"/>
    <TextClock
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textClock"
            android:textSize="65sp" android:layout_margin="12dp" android:background="@drawable/rect"
            android:gravity="center_vertical|center_horizontal" android:layout_gravity="center"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Time Zone"
            android:id="@+id/button1" android:textSize="30sp"
            android:layout_margin="12dp" android:layout_gravity="center"/>
    <TextClock
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textClock2"
            android:autoText="false" android:background="@drawable/rect"
            android:gravity="center_vertical|center_horizontal" android:textSize="65sp"
            android:layout_margin="12dp" android:layout_gravity="center"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView" android:layout_weight="0.04"
            android:layout_margin="12dp" android:textSize="30sp" android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"/>
</LinearLayout>

